<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnChangeColor" Content="Change Color" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Background="LightBlue"/>
        <TextBox x:Name="txtInput" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Text="Type something here"/>
        <Label x:Name="lblMessage" Content="Hello WPF!" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0" FontSize="16" Foreground="Green"/>
        <Button x:Name="btnChangeText" Content="Change Text" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Background="LightCoral"/>
    </Grid>
</Window>
